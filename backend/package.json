  "description": "Backend API pour l'application de rencontres Matcha",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:dev": "npm run build && npm run start",
    "test:password-reset": "ts-node src/scripts/testPasswordReset.ts",
    "clean:db": "ts-node src/scripts/cleanDatabase.ts",
    "clean:complete": "ts-node src/scripts/cleanDatabaseCompletely.ts",
    "fix:sequences": "ts-node src/scripts/fixSequences.ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "dating",
    "app",
    "express",
    "postgresql"
  ],
  "author": "Matcha Team",
  "license": "MIT",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node-fetch": "^2.6.12",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.10.1",
    "pg": "^8.11.3",
    "uuid": "^9.0.0",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.5.1",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.10.2",
    "@types/uuid": "^9.0.2",
    "@types/validator": "^13.15.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
